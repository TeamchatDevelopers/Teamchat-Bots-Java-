<!-- The headerView layout. Includes the fake Toolbar & the FloatingActionButton -->

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000"
   >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="180dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginBottom="10dp"
        android:background="@drawable/iitb" />
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="#eaeaea"
     >

 </LinearLayout>
    <LinearLayout
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:background="#f2f2f2">

     <Button
         android:layout_marginLeft="20px"
         android:id="@+id/button1"
         android:layout_marginRight="10px"
         android:layout_marginTop="20px"
         android:layout_width="175dp"
         android:layout_height="170dp"
         android:background="@drawable/fruit_basket" />

     <Button
         android:layout_marginLeft="10px"
         android:id="@+id/button2"
         android:textColor="#5f5f5f"
         android:layout_width="175dp"
         android:layout_height="170dp"
         android:layout_marginRight="20px"
         android:layout_marginTop="20px"

         android:background="@drawable/plansave"
         />
 </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#f2f2f2"
        >

     <Button
            android:id="@+id/button3"
         android:textColor="#5f5f5f"
         android:layout_width="175dp"
         android:layout_height="170dp"
         android:layout_marginLeft="20px"
         android:layout_marginRight="10px"
         android:layout_marginTop="20px"
         android:background="@drawable/book"/>

        <Button
            android:background="@drawable/split"
            android:id="@+id/button4"
            android:layout_width="175dp"
            android:layout_height="170dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:textColor="#5f5f5f"/>

</LinearLayout>


</LinearLayout>
    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
